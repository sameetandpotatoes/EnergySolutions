!!!
%html
  %head
    /[if lt IE 9]
      %script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}/
    %meta{content: "initial-scale=1", name: "viewport"}/
    %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}/
    %meta{content: "energy, solutions, water, hydropower, geothermal, solar, pv, photovoltaic, wind, biomass, location", name: "keywords"}/
    %link{href: "https://fonts.googleapis.com/css?family=Lato|Bree+Serif|Droid+Sans|Oldenburg|Oswald", rel: "stylesheet", type: "text/css"}/
    - if content_for?(:head)
      = yield(:head)
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-42777932-2', 'pure-energy.org');
      ga('send', 'pageview');
  %body{:style => "background: url(#{image_path('beige_paper.png')});"}
    %header#header
      %a.link{href: "/"} Pure Energy
    #cssmenu
      %ul
        %li.has-sub
          %a{href: "/compare/"}
            %span Energy Sources
          %ul
            %li
              %a{href: "/biomass/"}
                %span Biomass
            %li
              %a{href: "/biofuel/"}
                %span Biofuel
            %li
              %a{href: "/geothermal/"}
                %span Geothermal
            %li
              %a{href: "/water/"}
                %span Hydropower
            %li
              %a{href: "/solar/"}
                %span Solar PV
            %li
              %a{href: "/wind/"}
                %span Wind Turbines
            %li.last#compare
              %a{href: "/compare/"}
                %span Compare All
        %li
          %a{href: "/sources/"}
            %span References
        %li.last
          %a{href: "/about/"}
            %span About
    #loading
      = link_to image_tag("ajax-loader.gif")
    - if (current_page?(home_path))
      .home
        = yield
    - else
      - if (current_page?(:controller => "contents", :action => "sources") or current_page?(:controller => "contents", :action => "results") or current_page?(:controller => "contents", :action => "compare") or current_page?(:controller => "contents", :action => "about"))
        .home
          = yield
      - else
        = render "menu"
        #content
          = yield
