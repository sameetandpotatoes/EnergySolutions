!!!
%html
  %head
    /[if lt IE 9]
      %script{src: "http://html5shim.googlecode.com/svn/trunk/html5.js"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}/
    %meta{content: "initial-scale=1", name: "viewport"}/
    %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}/
    %meta{content: "energy, solutions, water, hydropower, geothermal, solar, pv, photovoltaic, wind, biomass, location", name: "keywords"}/
    %link{href: "https://fonts.googleapis.com/css?family=Lato|Bree+Serif|Droid+Sans|Oldenburg|Oswald", rel: "stylesheet", type: "text/css"}/
    - if content_for?(:head)
      = yield(:head)
    %link{rel: "icon", type: "image/png", href: "#{asset_path("favicon.png")}"}
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-42777932-2', 'pure-energy.org');
      ga('send', 'pageview');
  %body{:style => "background: url(#{image_path('beige_paper.png')});"}
    .content
      %header#header
        %a.link{href: "/"} Pure Energy
        %i.fa.fa-bars
      #mobilemenu
        %ul
          %li
            %a{href: "/"}
              %i.fa.fa-home
              %span{:style => "display: inline"} Home
          %li
            %a.noicon{href: "/biomass/"}
              %span Biomass
          %li
            %a.noicon{href: "/biofuel/"}
              %span Biofuel
          %li
            %a.noicon{href: "/geothermal/"}
              %span Geothermal
          %li
            %a.noicon{href: "/water/"}
              %span Hydropower
          %li
            %a.noicon{href: "/solar/"}
              %span Solar PV
          %li
            %a.noicon{href: "/wind/"}
              %span Wind
          %li
            %a{href: "/sources/"}
              %i.fa.fa-globe
              %span{:style => "display: inline"} References
          %li
            %a{href: "/about/"}
              %i.fa.fa-info
              %span{:style => "display: inline"} About
      #cssmenu
        %ul
          %li.has-sub
            %p
              %span Energy Sources
            %ul
              %li
                %a{href: "/biomass/"}
                  %span Biomass
              %li
                %a{href: "/biofuel/"}
                  %span Biofuel
              %li
                %a{href: "/geothermal/"}
                  %span Geothermal
              %li
                %a{href: "/water/"}
                  %span Hydropower
              %li
                %a{href: "/solar/"}
                  %span Solar PV
              %li
                %a{href: "/wind/"}
                  %span Wind Turbines
              %li.last#compare
                %a{href: "/compare/"}
                  %span Compare All
          %li
            %a{href: "/sources/"}
              %span References
          %li.last
            %a{href: "/about/"}
              %span About
      - if (current_page?(home_path))
        .home
          = yield
      - else
        - if (current_page?(:controller => "contents", :action => "sources") or current_page?(:controller => "contents", :action => "results") or current_page?(:controller => "contents", :action => "compare") or current_page?(:controller => "contents", :action => "about"))
          .home
            = yield
        - else
          = render "menu"
          #content
            = yield
      %footer.footer
        Copyright Â© Pure Energy 2013-2014. All Rights Reserved.
        \#{image_tag("BPA.jpg", :class=>"bpalogo", :width=>"100", :height => "50")}
        %a{href: "http://validator.w3.org/check?uri=http%3A%2F%2Fwww.pure-energy.org%2F", target: '_blank'}
          %img.w3{alt: "Valid HTML/CSS!", src: "http://jigsaw.w3.org/css-validator/images/vcss"}/
    #loading
      = link_to image_tag("ajax-loader.gif")
    = render "scrolltotop"
