				</div>
				<div class="item img">
					<%= link_to image_tag("tidal.jpg", :width => 700, :height => 400)%>
				</div>
				<div class="item img">
					<%= link_to image_tag("wind.jpg", :width => 700, :height => 400)%>
				</div>
				<div class="item img">
					<%= link_to image_tag("geothermal.jpg", :width => 700, :height => 400)%>
				</div>
			</div>
			<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
