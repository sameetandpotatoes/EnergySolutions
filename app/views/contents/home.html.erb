<div class="location">
	<h6>Find energy sources near you</h6>
	<%=text_field_tag 'zip', nil, maxlength: 5%>
	<div>
		<p>Allow us to determine your location</p>
	</div>
</div>
<div id="carousel">
		<div id="myCarousel" class="carousel slide">
			<div class="carousel-inner">
				<div class="item active img">
