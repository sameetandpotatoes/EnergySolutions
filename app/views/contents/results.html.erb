<% content_for :head do %>
	<title>Energy Solutions | Results</title>
<% end %>
<p style="display: none;" class="state"><%=@state%></p>
<div>
	<h1 class="header-results">Renewable Energy Sources Available in <%= @city.titlecase%>, <%=@state%></h1>
	<div class="results-energy">
	<% if (@wind) %>
		<%= image_tag("check.png", :width=>"25", :height=> "40", :class=>"image")%>
		<p class="results-inline"> Wind Energy is a good fit for your location. </p>
	<% else %>
		<%= image_tag("x.png", :width=>"25", :height=> "40", :class=>"image")%>
		<p class="results-inline"> Wind Energy will not work well in your location. </p>
	<% end %>
	</div>
	<div class="results-energy">
	<% if (@solar) %>
	<%= image_tag("check.png", :width=>"25", :height=> "40", :class=>"image")%>
	<p class="results-inline"> Solar Energy is a good fit for your location. </p>
	<% else %>
	<%= image_tag("x.png", :width=>"25", :height=> "40", :class=>"image")%>
	<p class="results-inline"> Solar Energy will not work well in your location. </p>
	<% end %>
	</div>
	<div class="results-energy">
	<% if (@geo) %>
	<%= image_tag("check.png", :width=>"25", :height=> "40", :class=>"image")%>
	<p class="results-inline"> Geothermal Energy is a good fit for your location. </p>
	<% else %>
	<%= image_tag("x.png", :width=>"25", :height=> "40", :class=>"image")%>
	<p class="results-inline"> Geothermal Energy will not work well in your location. </p>
	<% end %>
	</div>
	<div class="results-energy">
	<% if (@biomass) %>
	<%= image_tag("check.png", :width=>"25", :height=> "40", :class=>"image")%>
	<p class="results-inline"> Biomass Energy is a good fit for your location. </p>
	<% else %>
	<%= image_tag("x.png", :width=>"25", :height=> "40", :class=>"image")%>
	<p class="results-inline"> Biomass Energy will not work well in your location. </p>
	<% end %>
	</div>
</div>
<h1 class="header-results">Grants near <%= @city.titlecase %>, <%= @state %></h1>
<!-- <p class="source-text">Information provided by <a href="http://dsireusa.org">dsireusa.org</p> -->
<div id="grants">
</div>
<script>
	$(document).ready(function(){
		var state=$('.state').text();
		$("#grants").load("http://www.dsireusa.org/incentives/index.cfm?re=0&ee=0&spv=0&st=0&srp=1&state="+state);
		$.ajax({
		url: 'http://www.dsireusa.org/incentives/index.cfm?re=0&ee=0&spv=0&st=0&srp=1&state='+state,
		type: 'GET',
		success: function(res)
		{
		  var headline = $(res.responseText).find('#incentivelist').html();
		  var div = document.getElementById('grants');
		  div.innerHTML = headline;
		  $("#grants ul li a").each(function(){
		  	var _href = $(this).attr("href");
		  	$(this).attr("href", "http://www.dsireusa.org/incentives/"+_href);
		  	$(this).attr("target", "_blank");
		  });
		}
		});
	});
</script>
