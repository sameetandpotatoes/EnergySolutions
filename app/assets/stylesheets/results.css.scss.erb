.displayimage {
	padding-top: 10px;
}
#map{
	img{
		width: 100%;
	}
}

// eTabs
.etabs:before, .etabs:after {
    border-collapse: collapse;
    content: "";
    display: table;
}
.etabs:after {
    clear: both;
}
.etabs {
    margin: 0;
    padding: 0.2em 0.2em 0;
    background: repeat-x scroll 50% 50% #CCCCCC;
}
.categorytype, #moregrants h3 {
    color: #C9383E;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 1.5em;
    font-weight: bold;
}
.copybold {
    color: #000000;
    font-weight: bold;
}
.grantsinfo, .etabs{
	font-family: 'Lato';
}
.etabs > li > a{
	text-decoration: none;
	font-size: 16px;
}

// End
.grantsinfo{
		background-color: white;
}
#energymap{
	display: block;
	margin-left: auto;
	margin-right: auto;
	overflow: hidden;
}
.header-results{
	font-size: 22px;
	text-align: center;
	font-family: 'Droid Sans';
	padding: 20px 30px 0;
	margin-bottom: 0px;
}
.loc-div{
	display: block;
}
.results{
	display: none;
	display: inline-block !important;
	min-height: 500px;
	min-width: 550px;
	margin-top: 30px;
	p{
		width: 100%;
		font-size: 22px;
		padding: 5px;
	}
}
.results-energy{
	display: block;
	text-align: left;
	padding-left: 30px;
	padding-bottom: 10px;
}
.solar{background-color:rgba(255,0,0,0.2);}
.wind{background-color:rgba(128,128,128,0.2);}
.biomass{background-color:rgba(0,128,0,0.2);}
.geothermal{background-color:rgba(255,165,0,0.2);}
.hydroelectric{background-color:rgba(0,0,255,0.2);}
.header-results > span{background-color: rgba(128,0,128,0.2);}

#energy-map:nth-child(2){
	margin-top: 30px;
}
.energy{
	padding: 0px;
	margin: 0px;
	text-indent: 3px;
	margin-left: -3px;
}
.results-inline{
	display: inline-block;
	font-weight: normal;
	font-size: 25px;
	font-family: 'Lato';
}
#first{
	text-indent: 3px;
}
#results-icon-wrap{
	padding: 24px 10px;
}
.source-text{
	font-size: 12px;
	padding-left: 30px;
	margin-top: 0px;
}
#map-canvas{
	height: 500px;
	position: absolute;
	width: 50%;
	margin-top: 30px;
	right: 50px;
	display: inline-block;
}
.grantsinfo{
	padding: 0px 30px;
}
.grantsinfo ul li a{
	color: inherit;
}
#stateincentives p:nth-child(1){
	display: none;
}
#stateincentives > li, #laws > li{
	margin-left: 20px;
	margin-top: 10px;
}
.grantsinfo li{
	list-style-image: url(<%= asset_path "treehouse-marker.png" %>) !important;
}
.copy, .grantsinfo li, .grantsinfo a{
	font-family: 'Lato';
	font-size: 18px;
	padding-bottom: 10px;
}
.copybold{
	font-family: 'Lato';
}
#results-wrapper{
	height: 65px;
}
.state, #lat, #long, #energy{
	display: none;
}
#noenergy{
	width: 500px;
}
@media all and (max-width: 1200px){
	#map-canvas{
		width: 95% !important;
		display: block;
		position: relative;
		margin: 0 auto;
		right: 0px;
	}
	.results{
		min-height: 0;
		min-width: 0;
		display: block !important;
		margin: 30px 30px auto;
	}
	.results-energy{
		padding: 0;
	}
	#first{
		text-indent: 0px;
	}
}
@media all and (max-width: 650px){
	.results-inline{
		display: inline;
		padding-left: 5px;
	}
	.home{
		display: inline;
	}
	#map-canvas{
		display: none;
	}
}
